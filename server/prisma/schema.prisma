generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String   @unique
  password String
  workouts WorkOut[]

  @@map("users")
}

model Exercise {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  linkToVideo String?
  workouts WorkOutExercise[]
  @@map("exercises")
}

model WorkOut {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  authorId Int
  author User @relation(fields: [authorId], references: [id])
  exercises WorkOutExercise[]
  @@map("workouts")
}

model WorkOutExercise{
  id Int @id @default(autoincrement())
  workoutid Int
  exerciseid Int
  exercises Exercise @relation(fields: [exerciseid], references: [id])
  workouts WorkOut @relation(fields: [workoutid], references: [id])

  @@map("workout_exercise")
}